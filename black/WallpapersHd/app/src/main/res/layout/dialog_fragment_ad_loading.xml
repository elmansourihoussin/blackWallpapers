<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admob.AdLoadingDialogFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_loader_background">

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/loading_indicator_size"
        android:layout_height="@dimen/loading_indicator_size"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicatorColor="@color/color_loader"
        app:indicatorName="BallClipRotatePulseIndicator" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad Loading..."
        android:textColor="@android:color/white"/>

</LinearLayout>